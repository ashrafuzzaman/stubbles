<li id='<%= container_id_of(comment) %>' class="comment">
  <div class="comment-title">
    <div class="comment_by">
      <%= avatar(comment.user, 20) %>
      <div class="name"><%= comment.user.name %></div>
    </div>
    <span class="action"><%= link_to_delete_comment(comment) %></span>
    <%= render :partial => 'shared/date', :locals => {:date => comment.created_at} %>
  </div>
  <p class="comment-text">
    <%= raw comment.text %>
  </p>
</li>