<% story = task.story %>
<%= form_for([story, task], :remote => true, role: "form", html: {id: container_id_of(task)}) do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-md-8"><%= f.text_field :title, :required => true, class: 'form-control' %></div>
        <div class="col-md-1"><%= hours_estimated_tag(f, task) %></div>
        <div class="col-md-3"><%= select_users(f, story) %></div>
      </div>
    </div>
    <%= f.submit(:'data-disable-with' => "Saving...", :class => 'btn btn-primary') %>
    <%= ajax_cancel_link(task, :form) %>
<% end %>