var backlogStories = $('.story_column[data-scope="<%= Scope::BACKLOG %>"]');
var newStory = backlogStories.find('#new.story');
newStory.remove();
backlogStories.prepend('<%= escape_javascript(render :partial => 'stories/partials/form', :locals => {:story => @story, :project => @project}) %>');
newStory.hide();
newStory.slideDown("fast");
$('#<%= container_id_of(@story) %> .story-header .collapsable').click();