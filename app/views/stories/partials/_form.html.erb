<% project = story.project %>

<%= story_widget(story) do |sw| %>
    <%= form_for([project, story], :remote => true, role: 'form') do |f| %>
        <%= sw.header do %>
            <%= f.text_field :title, class: 'form-control', :required => true, :size => '50' %>
        <% end %>
        <%= sw.content(collapse: false) do %>
            <%= story.status %>
            <%= select_users(f, story) %>
            <%= select_story_type(f) %>
            <br/>
            <%= f.text_area :description, class: 'form-control', size: '80x10', :class => 'richtext' %>
            <%= f.tag :tag_list, :available_tags => Story.all_tag_counts %>
            <br/>
            <div style="margin: 0px 0px 10px 0px;">
              <%= f.submit :'data-disable-with' => "Saving...", :class => 'btn btn-primary' %>
              <%= ajax_cancel_link(story, '.story') %>
            </div>
        <% end %>
    <% end %>
<% end %>