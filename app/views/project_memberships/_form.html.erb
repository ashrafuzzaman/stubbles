<%= form_for([@project, @project_membership], :remote => true, html: {class: "form-inline"}, role: 'form') do |f| %>
    <div class="form-group">
      <label class="sr-only" for="exampleInputEmail2">Email address</label>
      <%= text_field_tag :email, '', :required => true, placeholder: 'Email', class: 'form-control' %>
    </div>
    <div class="form-group">
      <label class="sr-only" for="exampleInputPassword2">Role</label>
      <%= f.select :role, Role::all, {}, class: 'form-control' %>
    </div>
    <%= f.submit 'Add user', :'data-disable-with' => 'Adding...', :class => 'btn btn-default' %>
<% end %>