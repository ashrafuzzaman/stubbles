<!DOCTYPE html>
<html>
<head>
  <title>Stubbles</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!-- Internet Explorer HTML5 enabling code: -->
  <!--[if IE]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <%= yield :header %>
</head>
<body>

<% if current_user %>
    <% cache [:project_nav, @project] do %>
        <div class="navbar navbar-default">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="javascript:void(0)"><%= @project ? @project.name : 'Stubbles' %></a>
            </div>
            <div class="navbar-collapse collapse">
              <%= render :partial => 'layouts/menu' %>
            </div>
            <!--/.nav-collapse -->
          </div>
        </div>
    <% end %>
<% else %>
    <% cache :un_logged_in_user_nav do %>
        <div class="navbar navbar-default">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="javascript:void(0)">Stubbles</a>
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav pull-right">
                <li><%= link_to "Sign up", new_user_registration_path %></li>
                <li><%= link_to "sign in", new_user_session_path %></li>
              </ul>
            </div>
            <!--/.nav-collapse -->
          </div>
        </div>
    <% end %>
<% end %>

<div class="container main-container">
  <%= yield %>
</div>

</body>
</html>