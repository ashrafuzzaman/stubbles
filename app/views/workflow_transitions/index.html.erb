<h1>Listing workflow_transitions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Event</th>
      <th>From status</th>
      <th>To status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_transitions.each do |workflow_transition| %>
      <tr>
        <td><%= workflow_transition.event %></td>
        <td><%= workflow_transition.from_status %></td>
        <td><%= workflow_transition.to_status %></td>
        <td>
          <%= link_to 'Show', workflow_transition, class: 'btn-sm btn-default btn-primary' %>
          <%= link_to 'Edit', edit_workflow_transition_path(workflow_transition), class: 'btn-sm btn-default btn-primary' %>
          <%= link_to 'Destroy', workflow_transition, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-default btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New Workflow transition', new_workflow_transition_path, class: 'btn btn-default' %>
