<%= simple_form_for([@project, @milestone]) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :start_at, as: :text %>
    <%= f.input :end_at, as: :text %>
    <%= f.input :delivered_at, as: :text %>
    <%= f.input :duration %>
    <%= f.input :milestone_type, collection: ['Sprint'], :include_blank => true %>
    <%= f.input :parent_milestone_id, collection: @long_milestones, :include_blank => true %>

    <%= f.button :submit %>
<% end %>